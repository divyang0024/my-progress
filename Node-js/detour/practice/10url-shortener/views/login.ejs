        <input type="text" name="email"><br>
        <label for="">Password:</label>
        <input type="password" name="password"><br>
        <button type="submit">login</button>
    </form>
    <p style="color:red">
        <%if(locals.error){%>
            <%=locals.error%>
                <%}%>
    </p>
</body>

</html>